class Solution {
    boolean solution(String s) {
        boolean answer = true;
        char[] str = s.toCharArray();
        
        int p_cnt = 0;
        int y_cnt = 0;
        
        for(int i=0;i<str.length;i++){
            if(str[i] == 'p' || str[i] == 'P') p_cnt++;
            else if(str[i] == 'y' || str[i] == 'Y') y_cnt++;
        }

        return p_cnt == y_cnt ? true : false;
    }
}
